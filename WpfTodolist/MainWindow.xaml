<Window x:Class="WpfTodolist.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfTodolist"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="0.11*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="0.1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center">To Do</Label>
        <Button Name="afegir_tasca" Grid.Column="0" Grid.Row="0" HorizontalAlignment="Center" Margin="60,0,0,0" VerticalAlignment="Center" Padding="5,0,5,0">+</Button>
        <Button Name="todo_doing" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,80,0,0" Padding="5,0,5,0" >→</Button>
        <Button Name="doing_todo" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,100,0,0" Padding="5,0,5,0">←</Button>
        <Label Grid.Row="0" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center">Doing</Label>
        <Button Name="doing_done" Grid.Column="3" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,80,0,0" Padding="5,0,5,0" >→</Button>
        <Button Name="done_doing" Grid.Column="3" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,100,0,0" Padding="5,0,5,0">←</Button>
        <Label Grid.Row="0" Grid.Column="4" HorizontalAlignment="Center" VerticalAlignment="Center">Done</Label>


        <StackPanel HorizontalAlignment="Stretch" Grid.Row="1" Grid.Column="0">
            <Button>My BUtton 1</Button>
            <Label HorizontalAlignment="Center">My label</Label>
            <Button>My Button 2</Button>
        </StackPanel>

        <StackPanel HorizontalAlignment="Stretch" Grid.Row="1" Grid.Column="2">
            <Button>My BUtton 1</Button>
            <Label HorizontalAlignment="Center">My label</Label>
            <Button>My Button 2</Button>
        </StackPanel>

        <StackPanel HorizontalAlignment="Stretch" Grid.Row="1" Grid.Column="4">
            <Button>My BUtton 1</Button>
            <Label HorizontalAlignment="Center">My label</Label>
            <Button>My Button 2</Button>
        </StackPanel>


    </Grid>
</Window>
