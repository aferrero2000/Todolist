<Window x:Class="WpfTodolist.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfTodolist"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">
    <Grid>
        <Label Name="lbl_nom_tasca" Content="Nom:" HorizontalAlignment="Center" VerticalAlignment="Center" Height="30" Width="104" Margin="-255,-120,0,0"/>
        <TextBox Name="nom_tasca" HorizontalAlignment="Center" VerticalAlignment="Center" Height="20" Width="239" Margin="80,-120,0,0"/>
        <Label Name="lbl_descripcio" Content="Descripció:" HorizontalAlignment="Center" VerticalAlignment="Center" Height="30" Width="104" Margin="-255,-60,0,0"/>
        <TextBox Name="descripcio" HorizontalAlignment="Center" VerticalAlignment="Center" Height="20" Width="239" Margin="80,-60,0,0"/>
        <Label Name="lbl_data_de_creacio" Content="Data de creació:" HorizontalAlignment="Center" VerticalAlignment="Center" Height="30" Width="104" Margin="-255,0,0,0"/>
        <TextBox Name="data_de_creacio" HorizontalAlignment="Center" VerticalAlignment="Center" Height="20" Width="239" Margin="80,0,0,0"/>
        <Label Name="lbl_data_prevista_de_finalitzacio" Content="Data de finalització:" HorizontalAlignment="Center" VerticalAlignment="Center" Height="30" Width="104" Margin="-255,60,0,0"/>
        <TextBox Name="data_prevista_de_finalitzacío" HorizontalAlignment="Center" VerticalAlignment="Center" Height="20" Width="239" Margin="80,120,0,0"/>
        <Label Name="lbl_responsable" Content="Responsable:" HorizontalAlignment="Center" VerticalAlignment="Center" Height="30" Width="104" Margin="-255,120,0,0"/>
        <TextBox Name="responsable" HorizontalAlignment="Center" VerticalAlignment="Center" Height="20" Width="239" Margin="80,60,0,0"/>

        <Label Name="lbl_prioritat" Content="Prioritat:" HorizontalAlignment="Center" VerticalAlignment="Center" Height="30" Width="104" Margin="-255,180,0,0"/>
        <ComboBox Height="20" Width="239" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="80,180,0,0">
            <ComboBoxItem>Alta</ComboBoxItem>
            <ComboBoxItem>Baixa</ComboBoxItem>
            <ComboBoxItem>aaa</ComboBoxItem>
        </ComboBox>

            <Button Name="btn_eliminar" Content="Eliminar" HorizontalAlignment="Center" VerticalAlignment="Center" Height="20" Width="68" Margin="250,240,0,0"/>
        <Button Name="btn_guardar" Content="Guardar" HorizontalAlignment="Center" VerticalAlignment="Center" Height="20" Width="68" Margin="80,240,0,0"/>
        <Button Name="btn_cancelar" Content="Cancelar" HorizontalAlignment="Center" VerticalAlignment="Center" Height="20" Width="68" Margin="-90,240,0,0"/>
        
    </Grid>
</Window>
